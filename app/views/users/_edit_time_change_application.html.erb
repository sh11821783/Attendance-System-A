
<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-body">
      <div class="col-md-6 col-md-offset-3">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <center>【<%= @user.name  %>からの勤怠変更申請】</center>
      </div>
        <!--form_with(model: @モデル名, url: pathを指定(ルート名(右のpath名のルートにあるuserのidやその他のidがあれば引数に指定)), local: true) do |f|_-->
        <%= form_with(model: @attendances, url: user_update_time_change_application_path(@user), local: true) do |f| %>
          <table class="table table-striped table-bordered table-hover" id="table-attendances">
            <thead>
              <tr>
                <th rowspan = "3">日付</th>
                <th rowspan = "3">曜日</th>
                <th colspan = "4">変更前</th>
                <th colspan = "4">変更後</th>
                <th rowspan = "3">備考</th>
                <th rowspan = "3">指示者確認印</th>
                <th rowspan = "3">変更</th>
                <th rowspan = "3">勤怠を確認する</th>
              </tr>
              <tr>
                <th colspan = "2">出社</th>
                <th colspan = "2">退社</th>
                <th colspan = "2">出社</th>
                <th colspan = "2">退社</th>
              </tr>
              <tr>
                <th>時</th>
                <th>分</th>
                <th>時</th>
                <th>分</th>
                <th>時</th>
                <th>分</th>
                <th>時</th>
                <th>分</th>
              </tr>
            </thead>
            <% @attendances.each do |day| %>
            <tbody>
              <% 
                css_class = 
                case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
                when '土'
                  'text-primary'
                when '日'
                  'text-danger'
                end
              %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td><%= f.text_field :note , class: "form-control" %></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            </tbody>
            <% end %>
          </table>
          <div class="center">
            <%= f.submit "変更を送信する", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
